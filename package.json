{
  "name": "twisted-summoners-api",
  "version": "0.0.4",
  "description": "Twisted summoners API",
  "author": "Julio Sansossio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/twisted.gg/twisted-summoner-api"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:debug": "tsnd --transpileOnly --debounce 300 --inspect=0.0.0.0:9231 src/main.ts",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint --fix -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.10.1",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.1.0",
    "@twisted.gg/common": "^1.0.3",
    "@twisted.gg/models": "^1.0.4",
    "bluebird": "^3.7.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.2",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.7",
    "ms": "^2.1.2",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.1.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/bluebird": "^3.5.28",
    "@types/dotenv": "^6.1.1",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/lodash": "^4.14.144",
    "@types/mongoose": "^5.5.27",
    "@types/node": "11.13.4",
    "@types/redis": "^2.8.14",
    "@types/request-promise": "^4.1.45",
    "@types/sinon": "^7.5.0",
    "@types/supertest": "2.0.7",
    "dotenv": "^8.2.0",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "sinon": "^7.5.0",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.20.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "3.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "(.*).dto.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
